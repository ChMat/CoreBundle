{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% macro renderAllMyContactsPager(pager, max, orderedBy, order) %}
{{
    pagerfanta(
        pager,
        'twitter_bootstrap_translated',
        {
            'proximity' : 1,
            'routeName': 'claro_contact_show_all_visible_users',
            'routeParams': {
                'max': max,
                'orderedBy': orderedBy,
                'order': order
            }
        }
    )
}}
{% endmacro %}

{% macro renderAllVisibleUsersPager(pager, max, orderedBy, order) %}
{{
    pagerfanta(
        pager,
        'twitter_bootstrap_translated',
        {
            'proximity' : 1,
            'routeName': 'claro_contact_show_all_visible_users',
            'routeParams': {
                'max': max,
                'orderedBy': orderedBy,
                'order': order
            }
        }
    )
}}
{% endmacro %}

{% macro sortAllMyContactsUrl(max, orderedBy, order) %}
    {% if order == 'ASC' %}
        {% set newOrder = 'DESC' %}
    {% else %}
        {% set newOrder = 'ASC' %}
    {% endif %}

    {{
        path(
            'claro_contact_show_all_my_contacts',
            {
                'max': max,
                'orderedBy': orderedBy,
                'order': newOrder
            }
        )
    }}
{% endmacro %}

{% macro sortAllVisibleUsersUrl(max, orderedBy, order) %}
    {% if order == 'ASC' %}
        {% set newOrder = 'DESC' %}
    {% else %}
        {% set newOrder = 'ASC' %}
    {% endif %}

    {{
        path(
            'claro_contact_show_all_visible_users',
            {
                'max': max,
                'orderedBy': orderedBy,
                'order': newOrder
            }
        )
    }}
{% endmacro %}

{% from _self import renderAllMyContactsPager %}
{% from _self import renderAllVisibleUsersPager %}
{% from _self import sortAllMyContactsUrl %}
{% from _self import sortAllVisibleUsersUrl %}
{% from "ClarolineCoreBundle::macros.html.twig" import maxResultsSelectBox %}


{% block title %}
    {{ 'my_contacts' | trans({}, 'tools') | striptags | raw }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.desktopBreadcrumbs([
            {
                'name': 'my_contacts'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block content %}
    <div class="panel panel-default" id="my-contacts-tool">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'my_contacts'|trans({}, 'tools') }}
                <span class="dropdown pull-right">
                    <i class="fa fa-cog pointer-hand"
                       data-toggle="dropdown"
                    >
                    </i>
                    <ul class="dropdown-menu" role="menu">
                        <li role="presentation" id="contacts-configure-btn">
                            <a role="menuitem" tabindex="-1" href="#">
                                <i class="fa fa-wrench"></i>
                                {{ 'configure'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li role="presentation" id="category-create-btn">
                            <a role="menuitem" tabindex="-1" href="#">
                                <i class="fa fa-plus-circle"></i>
                                {{ 'create_category'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                </span>
            </h3>
        </div>
        <div class="panel-body">
            
            {% if options['show_all_my_contacts'] is not defined or options['show_all_my_contacts'] %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#all-my-contacts-content">
                                {{ 'all_my_contacts'|trans({}, 'platform') }}
                            </a>
                            &nbsp;
                            <span class="badge" id="all-my-contacts-badge">
                                {{ contacts|length }}
                            </span>
                            <i class="fa fa-user-plus pointer-hand pull-right"
                               id="add-contacts-btn"
                               data-toggle="tooltip"
                               data-placement="left"
                               title="{{ 'add_contacts'|trans({}, 'platform') }}"
                            ></i>
                        </h4>
                    </div>
                    <div id="all-my-contacts-content" class="panel-collapse collapse in">
                        <div class="panel-body" id="all-my-contacts-content-body">
                                
                            {% if contacts|length > 0 %}

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-group margin-bottom-md pull-left">
                                            {% if contacts.getNbPages() > 1 %}
                                                {{ renderAllMyContactsPager(contacts, max, orderedBy, order) }}
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-group pull-right" style="margin: 20px 0">
                                            {{ maxResultsSelectBox(max, "$('#max-results-button').trigger('click');", 'contacts_per_page') }}
                                        </div>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            {% if options['show_picture'] is not defined or options['show_picture'] %}
                                                <th>{{ 'picture'|trans({}, 'platform') }}</th>
                                            {% endif %}
                                            <th>
                                                <a href="{{ sortAllMyContactsUrl(max, 'firstName', order)|trim }}">
                                                    {{ 'firstName'|trans({}, 'platform') }}
                                                </a>
                                            </th>
                                            <th>
                                                <a href="{{ sortAllMyContactsUrl(max, 'lastName', order)|trim }}">
                                                    {{ 'lastName'|trans({}, 'platform') }}
                                                </a>
                                            </th>

                                            {% if options['show_username'] is not defined or options['show_username'] %}
                                                <th>
                                                    <a href="{{ sortAllMyContactsUrl(max, 'username', order)|trim }}">
                                                        {{ 'username'|trans({}, 'platform') }}
                                                    </a>
                                                </th>
                                            {% endif %}

                                            {% if options['show_mail'] is not defined or options['show_mail'] %}
                                                <th>
                                                    <a href="{{ sortAllMyContactsUrl(max, 'mail', order)|trim }}">
                                                        {{ 'mail'|trans({}, 'platform') }}
                                                    </a>
                                                </th>
                                            {% endif %}

                                            {% if options['show_phone'] is not defined or options['show_phone'] %}
                                                <th>
                                                    <a href="{{ sortAllMyContactsUrl(max, 'phone', order)|trim }}">
                                                        {{ 'phone'|trans({}, 'platform') }}
                                                    </a>
                                                </th>
                                            {% endif %}
                                        </tr>

                                        {% for user in contacts %}
                                            <tr>
                                                {% if options['show_picture'] is not defined or options['show_picture'] %}
                                                    <td>

                                                    </td>
                                                {% endif %}
                                                <td>{{ user.getFirstName() }}</td>
                                                <td>{{ user.getLastName() }}</td>

                                                {% if options['show_username'] is not defined or options['show_username'] %}
                                                    <td>{{ user.getUsername() }}</td>
                                                {% endif %}

                                                {% if options['show_mail'] is not defined or options['show_mail'] %}
                                                    <td>{{ user.getMail() }}</td>
                                                {% endif %}

                                                {% if options['show_phone'] is not defined or options['show_phone'] %}
                                                    <td>{{ user.getPhone() }}</td>
                                                {% endif %}

                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>

                                {% if contacts.getNbPages() > 1 %}
                                    {{ renderAllMyContactsPager(contacts, max, orderedBy, order) }}
                                {% endif %}
                            {% else %}
                                <div class="alert alert-warning">
                                    {{ 'no_user'|trans({}, 'platform') }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
            
            <div class="panel-group" role="tablist" id="category-list-box">
                {% for category in categories %}
                    {% set categoryId = category.getId() %}
                    <div class="panel panel-default category-element"
                         id="category-box-{{ categoryId }}"
                         style="overflow: visible"
                    >
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse"
                                   href="#category-content-{{ categoryId }}"
                                   id="category-title-{{ categoryId }}"
                                >
                                    {{ category.getName() }}
                                </a>
                                &nbsp;
                                <span class="badge" id="category-badge-{{ categoryId }}">
                                    0
                                </span>
                                <span class="dropdown pull-right">
                                    <i class="fa fa-cogs pointer-hand"
                                       data-toggle="dropdown"
                                    >
                                    </i>
                                    <ul class="dropdown-menu" role="menu">
                                        <li role="presentation"
                                            class="category-edit-btn"
                                            data-category-id="{{ categoryId }}"
                                        >
                                            <a role="menuitem" tabindex="-1" href="#">
                                                <i class="fa fa-edit"></i>
                                                {{ 'rename'|trans({}, 'platform') }}
                                            </a>
                                        </li>
                                        <li role="presentation"
                                            class="category-delete-btn"
                                            data-category-id="{{ categoryId }}"
                                        >
                                            <a role="menuitem" tabindex="-1" href="#">
                                                <i class="fa fa-times-circle"></i>
                                                {{ 'delete'|trans({}, 'platform') }}
                                            </a>
                                        </li>
                                    </ul>
                                </span>
                            </h4>
                        </div>
                        <div id="category-content-{{ categoryId }}" class="panel-collapse collapse">
                            <div class="panel-body" id="category-content-body-{{ categoryId }}">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <br>
            
            {% if options['show_all_visible_users'] is not defined or options['show_all_visible_users'] %}
                <div id="all-visible-users-box">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" href="#all-visible-users-content">
                                    {{ 'all_visible_users'|trans({}, 'platform') }}
                                </a>
                                &nbsp;
                                <span class="badge" id="all-visible-users-badge">
                                    {{ users|length }}
                                </span>
                            </h4>
                        </div>
                        <div id="all-visible-users-content" class="panel-collapse collapse">
                            <div class="panel-body" id="all-visible-users-content-body">
                                
                                {% if users|length > 0 %}

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="input-group margin-bottom-md pull-left">
                                                {% if users.getNbPages() > 1 %}
                                                    {{ renderAllVisibleUsersPager(users, max, orderedBy, order) }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="input-group pull-right" style="margin: 20px 0">
                                                {{ maxResultsSelectBox(max, "$('#max-results-button').trigger('click');", 'users_per_page') }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="table-responsive">
                                        <table class="table">
                                            <tr>
                                                {% if options['show_picture'] is not defined or options['show_picture'] %}
                                                    <th>{{ 'picture'|trans({}, 'platform') }}</th>
                                                {% endif %}
                                                <th>
                                                    <a href="{{ sortAllVisibleUsersUrl(max, 'firstName', order)|trim }}">
                                                        {{ 'firstName'|trans({}, 'platform') }}
                                                    </a>
                                                </th>
                                                <th>
                                                    <a href="{{ sortAllVisibleUsersUrl(max, 'lastName', order)|trim }}">
                                                        {{ 'lastName'|trans({}, 'platform') }}
                                                    </a>
                                                </th>

                                                {% if options['show_username'] is not defined or options['show_username'] %}
                                                    <th>
                                                        <a href="{{ sortAllVisibleUsersUrl(max, 'username', order)|trim }}">
                                                            {{ 'username'|trans({}, 'platform') }}
                                                        </a>
                                                    </th>
                                                {% endif %}

                                                {% if options['show_mail'] is not defined or options['show_mail'] %}
                                                    <th>
                                                        <a href="{{ sortAllVisibleUsersUrl(max, 'mail', order)|trim }}">
                                                            {{ 'mail'|trans({}, 'platform') }}
                                                        </a>
                                                    </th>
                                                {% endif %}

                                                {% if options['show_phone'] is not defined or options['show_phone'] %}
                                                    <th>
                                                        <a href="{{ sortAllVisibleUsersUrl(max, 'phone', order)|trim }}">
                                                            {{ 'phone'|trans({}, 'platform') }}
                                                        </a>
                                                    </th>
                                                {% endif %}
                                            </tr>

                                            {% for user in users %}
                                                <tr>
                                                    {% if options['show_picture'] is not defined or options['show_picture'] %}
                                                        <td>

                                                        </td>
                                                    {% endif %}
                                                    <td>{{ user.getFirstName() }}</td>
                                                    <td>{{ user.getLastName() }}</td>

                                                    {% if options['show_username'] is not defined or options['show_username'] %}
                                                        <td>{{ user.getUsername() }}</td>
                                                    {% endif %}

                                                    {% if options['show_mail'] is not defined or options['show_mail'] %}
                                                        <td>{{ user.getMail() }}</td>
                                                    {% endif %}

                                                    {% if options['show_phone'] is not defined or options['show_phone'] %}
                                                        <td>{{ user.getPhone() }}</td>
                                                    {% endif %}

                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>

                                    {% if users.getNbPages() > 1 %}
                                        {{ renderAllVisibleUsersPager(users, max, orderedBy, order) }}
                                    {% endif %}
                                {% else %}
                                    <div class="alert alert-warning">
                                        {{ 'no_user'|trans({}, 'platform') }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/contact/myContactsToolIndex.js') }}'
            type="text/javascript"
    >
    </script>
{% endblock %}

