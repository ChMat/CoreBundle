{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% block title %}
    {{ 'my_contacts' | trans({}, 'tools') | striptags | raw }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.desktopBreadcrumbs([
            {
                'name': 'my_contacts'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'my_contacts'|trans({}, 'tools') }}
            </h3>
        </div>
        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#all-my-contacts-box">
                            {{ 'all_my_contacts'|trans({}, 'platform') }}
                        </a>
                    </h4>
                </div>
                <div id="all-my-contacts-box" class="panel-collapse collapse in">
                    <div class="panel-body">
                        Liste de tous mes contacts
                    </div>
                </div>
            </div>
            
            {% for category in categories %}
                {% set categoryId = category.getId() %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#category-box-{{ categoryId }}">
                                {{ category.getName() }}
                            </a>
                        </h4>
                    </div>
                    <div id="category-box-{{ categoryId }}" class="panel-collapse collapse">
                        <div class="panel-body">
                            Liste des contacts de la cat√©gorie
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
