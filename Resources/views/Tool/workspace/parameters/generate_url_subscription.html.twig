{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "general_parameters" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
        workspace,
        [
            {
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'parameters'})
            },
            {
                'name': 'general'|trans({}, 'platform'),
                'href': ''
            }
        ]
    )
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'generate_url_subscription'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        {% if url is empty %}
            <div class="alert alert-danger">  {{ 'generate_url_subscription_fail'|trans({}, 'platform') }} </div>
        {% else %}
            {{ url }}
        {% endif %}
    </div>
    <div class="panel-footer">
    </div>
{% endblock %}