{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "general" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
        workspace,
            [
                {
                    'name': 'parameters'|trans({}, 'platform'),
                    'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'parameters'})
                },
                {
                    'name': 'model'|trans({}, 'platform'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'model'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        <button id="add-user-btn" class="btn btn-primary">{{ 'add_user'|trans({}, 'platform') }}</button>
        <button id="add-group-btn" class="btn btn-primary">{{ 'add_group'|trans({}, 'platform') }}</button>
    </div>
    <div class="panel-footer">
    </div>
{% endblock %}
{% block javascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/tool/workspace/model/indexShare.js') }}' type="text/javascript"></script>
    {{ parent() }}
{% endblock %}