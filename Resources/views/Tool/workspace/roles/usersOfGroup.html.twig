{% macro renderPager(search, workspaceId, group, pager, max, order) %}
{% if search == '' %}
    {{
        pagerfanta(
        pager,
        'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_users_of_group',
                'routeParams': {'workspace': workspaceId, 'group': group.getId(), 'max': max, 'order': order}
            }
        )
    }}
{% else %}
    {{
        pagerfanta(
        pager,
        'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_workspace_users_of_group_search',
                'routeParams': {'search': search, 'workspace': workspaceId, 'group': group.getId(), 'max': max, 'order': order}
            }
        )
    }}
{% endif %}
{% endmacro %}

{% macro sortUrl(max, search, groupId, workspaceId, order) %}
    {% if search == '' %}
        {{ path('claro_workspace_users_of_group',
        {'workspace': workspaceId, 'group': groupId, 'max': max, 'order': order}) }}
    {% else %}
        {{ path('claro_workspace_users_of_group_search',
        {'search': search, 'workspace': workspaceId, 'group': groupId, 'max': max, 'order': order}) }}
    {% endif %}
{% endmacro %}

{% from _self import sortUrl %}
{% from _self import renderPager %}

{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "groups" | trans({}, "platform") }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-book',
                'name': 'workspaces'|trans({}, 'platform'),
                'href': path('claro_workspace_list')
            },
            {
                'name': workspace.getName() ~ ' - ' ~  workspace.getCode(),
                'href': path('claro_workspace_open', {'workspaceId': workspace.getId(), 'toolName': 'home'})
            },
            {
                'name': 'groups'|trans({}, 'platform'),
                'href': ''
            },
        ])
    }}
{% endblock %}


{% block section_content %}
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li> <a href="{{ path('claro_workspace_registered_user_list', {'workspace': workspace.getId() }) }}"> {{'users'|trans({}, 'platform') }} </a> </li>
            <li class="active"> <a href="#"> {{'groups'|trans({}, 'platform') }} </a> </li>
            <li> <a href="{{ path('claro_workspace_roles', {'workspace': workspace.getId()} ) }}">{{ 'roles'|trans({}, 'platform') }}</a> </li>
        </ul>

        {{
            macros.breadcrumbs([
                {
                    'name': 'groups_list'|trans({}, 'platform'),
                    'href': path('claro_workspace_registered_group_list', {'workspace': workspace.getId()})
                },
                {
                    'name': group.getName(),
                    'href': ''
                }
            ])
        }}

        <div class="row">
            <div class="col-md-6">
                <div class="btn-group margin-md">
                    <a href="{{ path('claro_workspace_unregistered_user_list', {'workspace': workspace.getId()}) }}" class="btn btn-default dropdown-toggle">
                        <i class="icon-plus"></i> {{ 'add_users'|trans({}, 'platform') }}
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group margin-md">
                    <input class="form-control" type="text" id="search-items-txt"  placeholder="{{ 'search'|trans({}, 'platform') }}" value="{{ search }}">
                    <span class="input-group-btn">
                        <button class="filter btn btn-default" type="button" id="search-button">
                            <i class="icon-search"></i>
                        </button>
                    </span>
                </div>
                <div class="pull-right">
                    {{ 'line_per_page'|trans({}, 'platform') }}
                    <select class="form-control input-md" id="max-select">
                        <option>20</option>
                        <option>50</option>
                        <option>100</option>
                        <option>200</option>
                        <option>500</option>
                        </div>
                    </select>
                </div>
            </div>
        </div>

        {{ macros.flashBox() }}
        {{ renderPager(search, workspace.getId(), group, pager, max, order) }}

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th><a href="{{ sortUrl(max, search, group.getId(), workspace.getId(),  'id') }}">{{ 'id'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, group.getId(), workspace.getId(), 'username') }}">{{ 'username'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, group.getId(), workspace.getId(), 'lastName') }}">{{ 'last_name'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, group.getId(), workspace.getId(), 'firstName') }}">{{ 'first_name'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, group.getId(), workspace.getId(), 'mail') }}">{{ 'mail'|trans({}, 'platform') }}</a></th>
                    </tr>
                </thead>
                <tbody id="user-table-body">
                    {% for user in pager.currentPageResults %}
                        <tr id="row-{{ user.id }}" class="row-user" data-user-id="{{ user.getId() }}">
                            <td>{{ user.getId() }}</td>
                            <td>{{ user.getUsername() }}</td>
                            <td>{{ user.getLastName() }}</td>
                            <td>{{ user.getFirstName() }}</td>
                            <td>{{ user.getMail() }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ renderPager(search, workspace.getId(), group, pager, max, order) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
    vars=["locale"]
    "@ClarolineCoreBundle/Resources/views/Tool/workspace/roles/roleUserLabel.html.twigjs"
    "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
    "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
    filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        $('#max-select').val({{ max }});
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_workspace_users_of_group", "parameters": {'group': {{ group.getId() }}, 'workspace': {{  workspace.getId() }}, "order": "{{order}}" }};
        parameters.route.search = {"route": "claro_workspace_users_of_group_search", "parameters": {'group': {{ group.getId() }}, 'workspace': {{  workspace.getId() }}, "order": "{{prder}}" }};
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}
