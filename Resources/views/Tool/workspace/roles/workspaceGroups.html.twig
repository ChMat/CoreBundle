{% macro renderPager(search, workspaceId, pager, max, order) %}
    {% if search == '' %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_workspace_registered_group_list',
                    'routeParams': {'workspace': workspaceId, 'max': max, 'order': order}
                }
            )
        }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_workspace_registered_group_list_search',
                    'routeParams': {'search': search, 'workspace': workspaceId, 'max': max, 'order': order}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro sortUrl(workspaceId, max, search, order) %}
    {% if search == '' %}
        {{ path('claro_workspace_registered_group_list', {'workspace': workspaceId, 'max': max, 'order': order}) }}
    {% else %}
        {{ path('claro_workspace_registered_group_list_search', {'search': search, 'workspace': workspaceId, 'max': max, 'order': order}) }}
    {% endif %}
{% endmacro %}

{% from _self import sortUrl %}
{% from _self import renderPager %}

{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "groups_list" | trans({}, "platform") }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'groups'|trans({}, 'platform'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}


{% block section_content %}
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li> <a href="{{ path('claro_workspace_registered_user_list', {'workspace': workspace.getId() }) }}"> {{'users'|trans({}, 'platform') }} </a> </li>
            <li class="active"> <a href="{{ path('claro_workspace_registered_group_list', {'workspace': workspace.getId()}) }}"> {{'groups'|trans({}, 'platform') }} </a> </li>
            <li> <a href="{{ path('claro_workspace_roles', {'workspace': workspace.getId()} ) }}">{{ 'roles'|trans({}, 'platform') }}</a> </li>
        </ul>

        <div class="row">
            <div class="col-md-6">
                <div class="btn-group margin-md">
                    <a href="{{ path('claro_workspace_unregistered_group_list', {'workspace': workspace.getId()}) }}" class="btn btn-default dropdown-toggle">
                        <i class="icon-plus"></i> {{ 'add_groups' | trans({}, 'platform') }}
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group margin-md">
                    <input class="form-control" type="text" id="search-items-txt"  placeholder="{{ 'search'|trans({}, 'platform') }}" value="{{ search }}">
                    <span class="input-group-btn">
                        <button class="filter btn btn-default" type="button" id="search-button">
                            <i class="icon-search"></i>
                        </button>
                    </span>
                </div>
                <div class="pull-right">
                    {{ 'line_per_page'|trans({}, 'platform') }}
                    <select class="form-control input-md" id="max-select">
                        <option>20</option>
                        <option>50</option>
                        <option>100</option>
                        <option>200</option>
                        <option>500</option>
                        </div>
                    </select>
                </div>
            </div>
        </div>

        {{ macros.flashBox() }}
        <h3>{{ 'groups_list' | trans({}, 'platform') }}</h3>
        {{ renderPager(search, workspace.getId(), pager, max, order) }}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th> <input type="checkbox" name="all" id="check-all-items"></input> </th>
                        <th><a href="{{ sortUrl(workspace.getId(), max, search, 'id') }}">{{ 'id'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(workspace.getId(), max, search, 'name') }}">{{ 'name'|trans({}, 'platform') }}</a></th>
                        <th>{{ 'role'|trans({}, 'platform') }}</th>
                    </tr>
                </thead>
                <tbody id="user-table-body">
                    {% for group in pager.currentPageResults %}
                        <tr id="row-{{ group.id }}" class="row-group" data-group-id="{{ group.getId() }}">
                            <td> <input class="chk-grp" type="checkbox" value="{{ group.getId() }}"> </input></td>
                            <td>{{ group.getId() }}</td>
                            <td>  <a href="{{ path('claro_workspace_users_of_group', {'workspace': workspace.getId(), 'group': group.getId() }) }}"> {{ group.name }} </a> </td>
                            <td>
                                {% for role in group.getEntityRoles() %}
                                    {% if role.getWorkspace() == workspace %}
                                        <span class="label label-success" id="label-{{ role.getId () }}-{{ group.getId()}}">
                                            {{ role.getTranslationKey()|trans({}, 'platform') }}
                                            <i class="icon-remove-sign pointer-hand remove-role-button"
                                                href="{{ path('claro_workspace_remove_role_from_group', {'workspace': workspace.getId(), 'group': group.getId(), 'role': role.getId() } ) }}"
                                                >
                                            </i>
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ renderPager(search, workspace.getId(),  pager, max, order) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        $('#max-select').val({{ max }});
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_workspace_registered_group_list", "parameters": {'workspace': {{  workspace.getId() }}, "order": "{{prder}}" }};
        parameters.route.search = {"route": "claro_workspace_registered_group_list_search", "parameters": {'workspace': {{  workspace.getId() }}, "order": "{{prder}}" }};
        Claroline.Table.initialize(parameters);

        $('.popover-block').popover();
        $('.remove-role-button').live('click', function (event) {
            var target = $(event.currentTarget);
            var route = target.attr('href');
            $.ajax({
                url: route,
                type: 'DELETE',
                success: function() {
                    target.parent().remove();
                }
            });
        });

    </script>
{% endblock %}
