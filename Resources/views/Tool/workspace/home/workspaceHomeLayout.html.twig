{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-book',
                'name': 'workspaces'|trans({}, 'platform'),
                'href': path('claro_workspace_list')
            },
            {
                'name': workspace.getName() ~ ' - ' ~  workspace.getCode(),
                'href': path('claro_workspace_open', {'workspaceId': workspace.getId(), 'toolName': 'home'})
            },
            {
                'name': 'home'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'home'|trans({}, 'tools') }}</h3>
    </div>

    <div class="panel-body">
        <ul class="nav nav-tabs tabs">
            {% for adminHomeTabConfig in adminHomeTabConfigs %}
            {% set adminHomeTab = adminHomeTabConfig.getHomeTab() %}
            <li {% if adminHomeTab.getId() == tabId %}class="active"{% endif %}>
                <a href="{{ path(
                        'claro_display_workspace_home_tabs',
                        {'workspaceId': workspace.getId(), 'tabId': adminHomeTab.getId()})
                    }}"
                    id="{{ adminHomeTab.getName() }}_link"
                >
                    {{ adminHomeTab.getName() }}
                </a>
            </li>
            {% endfor %}
            {% for workspaceHomeTabConfig in workspaceHomeTabConfigs %}
            {% set workspaceHomeTab = workspaceHomeTabConfig.getHomeTab() %}
            <li {% if workspaceHomeTab.getId() == tabId %}class="active"{% endif %}>
                <a href="{{ path(
                        'claro_display_workspace_home_tabs',
                        {'workspaceId': workspace.getId(), 'tabId': workspaceHomeTab.getId()})
                    }}"
                    id="{{ workspaceHomeTab.getName() }}_link"
                >
                    {{ workspaceHomeTab.getName() }}
               </a>
            </li>
            {% endfor %}
        </ul>

        {% block homeTab %}{% endblock %}
    </div>
{% endblock %}
