{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-briefcase',
                'name': 'desktop'|trans({}, 'platform'),
                'href': path('claro_desktop_open')
            },
            {
                'name': 'home'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'home'|trans({}, 'tools') }}</h3>
    </div>
    <div class="panel-body">
        <ul class="nav nav-tabs tabs">
            {% for adminHomeTabConfig in adminHomeTabConfigs %}
            {% set adminHomeTab = adminHomeTabConfig.getHomeTab() %}
            <li {% if adminHomeTab.getId() == tabId %}class="active"{% endif %}>
                <a href="{{ path('claro_display_desktop_home_tabs', {'tabId': adminHomeTab.getId()}) }}"
                    id="{{ adminHomeTab.getName() }}_link"
                >
                    {{ adminHomeTab.getName() }}
                </a>
            </li>
            {% endfor %}
            {% for userHomeTabConfig in userHomeTabConfigs %}
            {% set userHomeTab = userHomeTabConfig.getHomeTab() %}
            <li {% if userHomeTab.getId() == tabId %}class="active"{% endif %}>
                <a href="{{ path('claro_display_desktop_home_tabs', {'tabId': userHomeTab.getId()}) }}"
                    id="{{ userHomeTab.getName() }}_link"
                >
                    {{ userHomeTab.getName() }}
                </a>
            </li>
            {% endfor %}
        </ul>

        {% block homeTab %}{% endblock %}
    </div>
{% endblock %}
