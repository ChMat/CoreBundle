{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-briefcase',
                'name': 'desktop'|trans({}, 'platform'),
                'href': path('claro_desktop_open')
            },
            {
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_desktop_open_tool', {'toolName': 'parameters'})
            },
            {
                'name': 'home'|trans({}, 'platform'),
                'href': path('claro_desktop_tool_config', {'tool': tool.getId()})
            },
            {
                'name': 'widgets'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'widget_settings' | trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        <form id="create-widget">
            <select id="widgets" >
                {% for widget in widgets %}
                    <option value="{{ widget.getId() }}"> {{ widget.getName() }} </option>
                {% endfor %}
            </select>
            <input type="submit" value="{{ 'add'|trans({}, 'platform') }}"></input>
        </form>
        <table id="widget-table"  class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'name'|trans({}, 'platform') }}</th>
                    <th>{{ 'configuration'|trans({}, 'platform') }}</th>
                </tr>
            </thead>
            <tbody id="widget-table-body" data-user-id="{{ user.getId() }}">
                {% for widgetInstance in widgetInstances %}
                    <tr class='row-widget-config'>
                        <th>{% render controller('ClarolineCoreBundle:AdministrationWidget:editWidgetNameForm', {'widgetInstanceId': widgetInstance.getId()}) %}</th>
                        <th>
                            <a href="{{ path('claro_desktop_widget_configuration', {'widgetInstanceId': widgetInstance.getId()}) }}">
                                {{ 'configure'|trans({}, 'platform') }}
                            </a>
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/tool/desktop/widget_properties.js') }}" type="text/javascript"></script>
{% endblock %}
