{% extends 'ClarolineCoreBundle:Desktop:layout.html.twig' %}

{% block section_content %}
    <div id="config-value-div" config-value="{{ withConfig }}"></div>
    <div id="hometab-id-div" hometab-id="{{ tabId }}"></div>

    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'home'|trans({}, 'tools') }}
            <i id="switch-config-mode" class="icon-cog pull-right pointer-hand"></i>
        </h3>
    </div>
    <div class="panel-body">
        <ul class="nav nav-tabs tabs">
            {% for adminHomeTabConfig in adminHomeTabConfigs %}
            {% set adminHomeTab = adminHomeTabConfig.getHomeTab() %}
            <li class="
                {% if adminHomeTab.getId() == tabId %} active {% endif %}
                {% if not adminHomeTabConfig.isVisible() %} toggle-visible {% endif %}
                {% if (withConfig == 0 and not adminHomeTabConfig.isVisible()) %}
                    hidden
                {% endif %}"
            >
                <a href="" class="hometab-link" home-tab-id="{{ adminHomeTab.getId() }}">
                    {{ adminHomeTab.getName() }}
                    <i class="toggle-visible admin-hometab-visibility-btn pointer-hand
                        {% if withConfig == 0 %} hidden {% endif %}
                        {% if adminHomeTabConfig.isVisible() %} icon-eye-open {% else %} icon-eye-close {% endif %}"
                        visiblility-value="{% if adminHomeTabConfig.isVisible() %} visible {% else %} invisible {% endif %}"
                    ></i>
                </a>
            </li>
            {% endfor %}
            {% for userHomeTabConfig in userHomeTabConfigs %}
            {% set userHomeTab = userHomeTabConfig.getHomeTab() %}
            <li class="
                {% if userHomeTab.getId() == tabId %} active {% endif %}
                {% if not userHomeTabConfig.isVisible() %} toggle-visible {% endif %}
                {% if (withConfig == 0 and not userHomeTabConfig.isVisible()) %}
                    hidden
                {% endif %}"
            >
                <a href=""
                    class="hometab-link"
                    home-tab-id="{{ userHomeTab.getId() }}"
                    home-tab-order="{{ userHomeTabConfig.getTabOrder() }}"
                >
                    {{ userHomeTab.getName() }}
                    <i class="toggle-visible pointer-hand hometab-rename-btn icon-edit
                        {% if withConfig == 0 %} hidden {% endif %}"
                    ></i>
                    <i class="toggle-visible pointer-hand hometab-visibility-btn
                        {% if withConfig == 0 %} hidden {% endif %}
                        {% if userHomeTabConfig.isVisible() %} icon-eye-open {% else %} icon-eye-close {% endif %}"
                        visiblility-value="{% if userHomeTabConfig.isVisible() %} visible {% else %} invisible {% endif %}"
                        hometab-config-id="{{ userHomeTabConfig.getId() }}"
                        id="visible-hometab-id-{{ userHomeTab.getId() }}"
                    ></i>
                    <i class="toggle-visible pointer-hand hometab-delete-btn icon-remove-sign
                        {% if withConfig == 0 %} hidden {% endif %}"
                    ></i>
                </a>
            </li>
            {% endfor %}
            <li id="add-hometab-btn" class="toggle-visible {% if withConfig == 0 %} hidden {% endif %}">
                <a href="">
                    <i id="add-hometab-button" class="icon-plus"></i>
                </a>
            </li>
        </ul>

        {% block homeTab %}{% endblock %}
    </div>

    <div id="delete-home-tab-validation-box" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                    <h3>{{ 'home_tab_delete_confirm_title'|trans({}, 'platform') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'home_tab_delete_confirm_message'|trans({}, 'platform') }}</p>
                </div>
                <div class="modal-footer">
                    <input type="button" id="delete-home-tab-confirm-ok" class="btn btn-primary" value="{{ 'ok'|trans({}, 'platform') }}"/>
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="{{ 'cancel'|trans({}, 'platform') }}"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
        src='{{ asset('bundles/clarolinecore/js/tool/desktop/home/desktopHomeLayout.js') }}'
        type="text/javascript">
    </script>
    <script
        src="{{ url('bazinga_exposetranslation_js', { 'domain_name': 'platform' }) }}"
        type="text/javascript">
    </script>
{% endblock %}