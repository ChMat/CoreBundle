{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'parameters' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
{{
    macros.breadcrumbs([
        {
            'icon': 'icon-cog',
            'name': 'administration'|trans({}, 'platform'),
            'href': path('claro_admin_parameters_index')
        },
        {
            'name': 'parameters'|trans({}, 'platform'),
            'href': ''
        }
    ])
}}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'parameters'|trans({}, 'platform') }}</h3>
    </div>
    <div class="list-group">
        <a class="list-group-item" href="{{ path('claro_admin_parameters_general') }}">
            <i class="icon-wrench"></i> {{ 'general'|trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_parameters_appearance') }}">
            <i class="icon-picture"></i> {{ 'appearance'|trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_edit_terms_of_service') }}">
            <i class="icon-file-text-alt"></i> {{ 'Terms of service' | trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_parameters_mail_index') }}">
            <i class="icon-envelope"></i> {{ 'mail'|trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_parameters_indexing') }}">
            <i class="icon-search"></i> {{ 'Indexing'|trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_session') }}">
            <i class="icon-lock"></i> {{ 'session'|trans({}, 'platform') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_parameters_oauth_index') }}">
            <i class="icon-globe"></i> {{ 'oauth'|trans({}, 'platform') }}
        </a>
    </div>
{% endblock %}
