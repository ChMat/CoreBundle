{% macro renderPager(search, pager, max, order) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_admin_user_list',
                'routeParams': {'max': max, 'order': order}
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_admin_user_list_search',
                    'routeParams': {'search': search, 'max': max, 'order': order}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro displayControls(workspaceId) %}
    {% if app.user %}
        <button class="btn btn-default action-button" data-action="remove">
            <i class="icon-trash"></i>
            {{ 'delete'|trans({}, 'platform') }}
        </button>
        <button class="btn btn-default action-button" data-action="password">
            <i class="icon-trash"></i>
            {{ 'reset_password'|trans({}, 'platform') }}
        </button>
    {% endif %}
{% endmacro %}

{% macro sortUrl(max, search, order) %}
    {% if search == '' %}
        {{ path('claro_admin_user_list', {'max': max, 'order': order}) }}
    {% else %}
        {{ path('claro_admin_user_list_search', {'search': search, 'max': max, 'order': order}) }}
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}
{% from _self import displayControls %}
{% from _self import sortUrl %}

{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'users' | trans({}, 'platform') }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'users_management'|trans({}, 'platform'),
                'href': path('claro_admin_users_management')
            },
            {
                'name':'users'|trans({}, 'platform'),
                'href':''
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'users_list'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body">
        <div>
            {{ macros.flashBox() }}
        </div>
        <div class="search-bar row">
            <div class="col-md-6">
                {{ displayControls(workspace.getId()) }}
            </div>
            <div class="col-md-6">
                 <div class="input-group">
                    <input class="form-control" type="text" id="search-items-txt" placeholder="{{ 'search'|trans({}, 'platform') }}" value={{search}}>
                    <span class="input-group-btn">
                        <button class="filter btn btn-default" type="button" id="search-button">
                            <i class="icon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                {{ renderPager(search, pager, max, order) }}
            </div>
            <div class="col-md-2" style="margin-top: 15px;">
                <div >
                    {{ 'line_per_page'|trans({}, 'platform') }}
                </div>
                <div>
                    <select class="form-control input-md" id="max-select">
                        <option>20</option>
                        <option>50</option>
                        <option>100</option>
                        <option>200</option>
                        <option>500</option>
                        </div>
                    </select>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table id="user-table"  class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th><a href="{{ sortUrl(max, search, 'id') }}">{{ 'id'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, 'username') }}">{{ 'username'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, 'lastName') }}">{{ 'last_name'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, 'firstName') }}">{{ 'first_name'|trans({}, 'platform') }}</a></th>
                        <th><a href="{{ sortUrl(max, search, 'mail') }}">{{ 'mail'|trans({}, 'platform') }}</a></th>
                        <th>{{ 'edit'|trans({}, 'platform') }}</th>
                        <th>{{ 'role'|trans({}, 'platform') }}</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>{{ 'show_as'|trans({}, 'platform') }}</th>
                            <th><input type="checkbox" name="all" id="check-all-items"></input></th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody id="user-table-body">
                    {% for user in pager.currentPageResults %}
                        <tr id="{{ user.getId() }}" class="row-user">
                            <td>{{ user.getId() }}</td>
                            <td>
                                <a href="{{ path('claro_profile_view', {'userId': user.getId()}) }}"> {{user.getUsername()}}</a>
                            </td>
                            <td>{{ user.getLastName() }}</td>
                            <td>{{ user.getFirstName() }}</td>
                            <td>{{ user.getMail() }}</td>

                            <td> <a href="{{ path('claro_profile_form', {'user': user.getId()}) }}">
                                {{ user.getUsername() }}
                            </a>
                        </td>
                            <td>
                                <div>
                                    {% for role in user.getEntityRoles() %}
                                        {% if role.type == 1 %}
                                            {{ role.getTranslationKey()|trans({}, 'platform')  }}
                                            {% if not loop.last %}, {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </td>
                            {% if is_granted('ROLE_ADMIN') %}
                            <td>
                                {% if user.getId() != app.user.id %}
                                    <a href="{{ path('claro_desktop_open', {'_switch': user.getUsername()}) }}">
                                        {{ 'show'|trans({}, 'platform') }}
                                    </a>
                                {% endif %}
                            </td>
                            <td>
                                <input type="checkbox" value="{{ user.id }}" class="chk-item" align="center"></input>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ renderPager(search, pager, max, order) }}
        <div>
            {{ displayControls(workspace.getId()) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        vars=["locale"]
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/removeUserConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/resetPasswordConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
        filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        $('#max-select').val({{ max }});
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_admin_user_list", "parameters": {'order': '{{ order }}' }};
        parameters.route.search = {"route": "claro_admin_user_list_search", "parameters": {'order': '{{ order }}' }};
        parameters.route.action.remove = {"route": "claro_admin_multidelete_user", "parameters": {}, "type": "DELETE", "confirmTemplate": removeUserConfirm, "delete": true};
        parameters.route.action.password = {"route": "claro_security_initialize_password", "parameters": {}, "type": "POST", "confirmTemplate": resetPasswordConfirm};
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}
