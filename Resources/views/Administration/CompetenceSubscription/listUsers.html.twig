{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ '' | trans({}, 'platform') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'registration_to_competence'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'registration_to_workspaces'|trans({}, 'platform') }}</h3>
    </div>
    {% for key,uc in listUsers %}

    <div class="panel-body" id="workspace-list-div">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
            <thead>
                <th> {{ key }}
                <th> <input type="checkbox" name="all" id="chkAll"> </th>
            </thead>
            {% for u in uc %}
                <tr>
                    <td> {{u}}</td> 
                    <td class="right"> <input type="checkbox" name="cpt" class="cpt"  /></td>
                </tr>
                {% endfor %}
            {% endfor %}
            </table>
         </div>
    </div>
{% endblock %}