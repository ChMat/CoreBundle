{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'widget_settings'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title"> {{ 'widget_settings'|trans({}, 'platform') }}</h3>
    </div>

    <div class="panel-body">
        <form id="create-widget">
            <select id="widgets" >
                {% for widget in widgets %}
                    <option value="{{ widget.getId() }}"> {{ widget.getName() }} </option>
                {% endfor %}
            </select>
            <input type="submit" value="{{ 'add'|trans({}, 'platform') }}"></input>
        </form>
        <h4> {{ 'workspace'|trans({}, 'platform') }}</h4>
        <table id="widget-table" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'name'|trans({}, 'platform') }}</th>
                    <th>{{ 'configuration'|trans({}, 'platform') }}</th>
                </tr>
            </thead>
            <tbody id="widget-table-body">
                {% for wconfig in wconfigs %}
                <tr class='row-widget-config' data-id="{{ wconfig.getId() }}">
                    <td>{% render controller('ClarolineCoreBundle:AdministrationWidget:editWidgetNameForm', {'config': wconfig}) %}</td>
                    <td>
                        {% if wconfig.getWidget().isConfigurable() %}
                        <a href="{{ path('claro_admin_widget_configuration', {'config': wconfig.getId()}) }}">{{ 'configure'|trans({}, 'platform') }}</a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <hr>
        <form id="create-desktop-widget">
            <select id="desktop-widgets" >
                {% for widget in widgets %}
                    <option value="{{ widget.getId() }}"> {{ widget.getName() }} </option>
                {% endfor %}
            </select>
            <input type="submit" value="{{ 'add'|trans({}, 'platform') }}"></input>
        </form>
        <h4> {{ 'desktop'|trans({}, 'platform') }}</h4>

        <table id="widget-table" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'name'|trans({}, 'platform') }}</th>
                    <th>{{ 'configuration'|trans({}, 'platform') }}</th>
                </tr>
            </thead>
            <tbody id="widget-table-body">
                {% for dconfig in dconfigs %}
                <tr class='row-widget-config' data-id="{{ dconfig.getId() }}">
                    <td>{% render controller('ClarolineCoreBundle:AdministrationWidget:editWidgetNameForm', {'config': dconfig}) %}</td>
                    <td>
                        {% if dconfig.getWidget().isConfigurable() %}
                        <a href="{{ path('claro_admin_widget_configuration', {'config': dconfig.getId()}) }}">{{ 'configure'|trans({}, 'platform') }}</a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/administration/widgets.js') }}" type="text/javascript"></script>
{% endblock %}
