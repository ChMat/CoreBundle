{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block title %}{{ user.getLastName() ~ ' ' ~ user.getFirstName() | striptags | raw }}{% endblock %}

{% set canEdit = (app.user is not null and user.getId() == app.user.getId()) or is_granted('ROLE_ADMIN') %}

{% block content %}
    {{ macros.flashBox() }}
    <div class="panel panel-default panel-user">
        <div class="panel-heading relative">
            {% if canEdit %}
                <div class="dropdown float-right-top">
                    <a data-toggle="dropdown" href="#" class="btn btn-xs btn-primary">
                        <span class="icon-edit"></span> {{ 'edit' | trans({}, 'platform') }} <i class="caret"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        <li>
                            <a href="{{ path('claro_user_profile_edit') }}">
                                {{ 'edit_profile'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('claro_user_password_edit') }}">
                                {{ 'edit_password'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
            <h3 class="panel-title">
                {{ user.getLastName() ~ ' ' ~ user.getFirstName() }}
            </h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 profile_picture_container">
                    {% if user.getPicture() != "" %}
                        <img src="{{ asset('uploads/pictures/') ~  user.getPicture() }}" class="profile_picture">
                    {% else %}
                        <h1 class="profile_picture_placeholder"><i class="icon-user"></i></h1>
                    {% endif %}
                </div>
                <div class="col-md-10">
                    <ul class="list-unstyled">
                        <li>{{'First name' | trans({}, 'platform') }}: {{user.getFirstName()}}</li>
                        <li> {{'Last name' | trans({}, 'platform') }}: {{user.getLastName()}}</li>
                        <li> {{'User name' | trans({}, 'platform') }}: {{user.getUsername()}}</li>
                        {% if user.getPhone() is not null %}
                            <li><i class="icon-phone"></i> {{ user.getPhone() }}</li>
                        {% endif %}
                    </ul>
                    {% if '' != user.getDescription() %}<p>Description</p>: {{ user.getDescription() |raw }} </p>{% endif %}
                    <p class="text-muted">{{ 'registered'|trans({}, 'platform') }} {{ user.getCreationDate()| timeAgo }}</p>
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-default" href="{{path('claro_mail_form', {'userId':user.getId()})}}">
                                <i class="icon-comment"></i> {{ 'send_mail'|trans({}, 'platform') }}
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{path('claro_message_show', {'message': 0})}}?ids[]={{ user.getId() }}">
                                <i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}