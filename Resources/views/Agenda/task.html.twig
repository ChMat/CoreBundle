{% twig_js name="Task" %}

<li
    id="li-task-{{ event.id }}"
    class="list-group-item task-item"
    data-task-id="{{ event.id }}"
    {% if event.workspace_id != null %}
        data-workspace-id="{{ event.workspace_id }}"
    {% else %}
        data-workspace-id="0"
    {% endif %}
>
    <a href="{{ path('claro_agenda_delete_event', {'event': event.id}) }}" class="delete-event close">&times;</a>
    <strong data-event-title="{{event.title}}"> {{ event.title }}</strong>

    {% if event.description is not empty %}
        <span>{{ event.description | raw }}</span>
    {% endif %}

    <div class="text-muted">
        <span data-event-start="{{ event.start }}"> {{ event.start }}</span>
    </div>

    <div>
        <a href="{{ path('claro_agenda_update_event_form', {'event': event.id}) }}"
           class="edit-event-link"
           role="button"
        >
            {{ 'edit'|trans({}, 'platform') }}
        </a>
    </div>
</li>