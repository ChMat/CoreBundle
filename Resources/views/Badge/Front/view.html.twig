{% extends "ClarolineCoreBundle:Badge:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ badge.name | striptags | raw }}{% endblock %}

{% trans_default_domain "badge" %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'badge'|trans }} "{{ badge.name }}"
                {% if badge.isExpiring %}
                <small>{{ 'badge_valid_for_period'|trans({'%validityPeriod%': badge.expireDuration ~ ' ' ~ badge.expirePeriodLabel|trans}) }}</small>
                {% endif %}
            </h3>
        </div>
        <div class="panel-body">
            <div class="media">
                <img class="media-object pull-left badge_image_informations" src="{{ asset(badge.webPath) }}" alt="{{ badge.name }}" />
                <div class="media-body">
                    <h4 class="media-heading">{{ badge.description }}</h4>
                    {{ badge.criteria|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
