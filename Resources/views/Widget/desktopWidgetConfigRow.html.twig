<tr class='row-widget-config'>
    <th>{{ config.getWidget().getName()|trans({}, 'widget') }}</th>
    <th>{% render controller('ClarolineCoreBundle:AdministrationWidget:editWidgetNameForm', {'widgetInstanceId': config.getId()}) %}</th>
    <th>
        <a href="{{ path('claro_desktop_widget_configuration', {'widgetInstanceId': config.getId()}) }}">
            {{ 'configure'|trans({}, 'platform') }}
        </a>
    </th>
    <th> <a class="delete-widget" href="{{ path('claro_desktop_remove_widget', {'widgetInstance': config.getId()}) }}">{{ 'delete'|trans({}, 'platform') }}</a></th>
</tr>